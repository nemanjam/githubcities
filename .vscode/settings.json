{
  // exclude folders
  "files.exclude": {
    "**/.venv": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/.turbo": true
  },
  "search.exclude": {
    "**/.venv": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/.turbo": true
  },
  "files.watcherExclude": {
    "**/.venv/**": true,
    "**/.ruff_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/.turbo/**": true
  },

  "better-comments.tags": [
    { "tag": "!", "color": "#FF2D00" },                     // red
    { "tag": "?", "color": "#3498DB" },                     // blue
    { "tag": "//", "color": "#474747" },                    // darkgray
    { "tag": "todo", "color": "#FF8C00" },                  // darkorange
    { "tag": "*", "color": "#98C379" },                     // green
    { "tag": "note", "color": "#32CD32", "italic": true },  // limegreen
    { "tag": "fix", "color": "#FF4500", "strikethrough": true }, // orangered
    { "tag": "review", "color": "#8A2BE2", "italic": true, "underline": true }, // blueviolet
    { "tag": "optimize", "color": "#FFD700", "bold": true, "italic": true },   // gold
    { "tag": "debug", "color": "#FF6347", "strikethrough": true, "underline": true } // tomato
  ],

  "editor.formatOnSave": true,

  // python
  "python.defaultInterpreterPath": "./backend/.venv/bin/python",
  // formatting
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      // "source.organizeImports": "explicit" // orders differently, must disable
    }
  },

  // next.js

  // Point to the local TypeScript version
  "typescript.tsdk": "frontend/node_modules/typescript/lib",

  // Enable workspace TypeScript version (not VSCode's built-in)
  "typescript.enablePromptUseWorkspaceTsdk": true,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // cant format above node_modules
  "prettier.configPath": "./frontend/.prettierrc.js",
  "prettier.ignorePath": "./frontend/.prettierignore",

  "tailwindCSS.experimental.configFile": "frontend/packages/ui/src/styles/main.css",
  "cSpell.words": [
    "oklch"
  ]

}
