{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "standalone": "node apps/web/.next/standalone/apps/web/server.js",
    "lint": "turbo lint",
    "generate-client": "openapi-ts",
    "up:all": "find . -name package.json -not -path '*/node_modules/*' -not -path '*/.next/*' -execdir pnpm up --latest \\;",
    "clean:nm": "rm -f pnpm-lock.yaml && find . -type d -name node_modules -prune -exec rm -rf '{}' +",
    "find:nm": "find . -type d -name 'node_modules' ! -path '*/node_modules/*/node_modules'",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker:build:x86": "docker buildx build -f ./Dockerfile -t nemanjamitic/githubcities-frontend --build-arg ARG_SITE_URL_AMD64='githubcities.local.nemanjamitic.com' --platform linux/amd64 ."
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=24.7.0",
    "pnpm": ">=10.12.4"
  }
}
