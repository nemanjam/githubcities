{
  // exclude folders
  "files.exclude": {
    "**/.venv": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/__pycache__": true,
    "**/.turbo": true
  },
  "search.exclude": {
    "**/.venv": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/__pycache__": true,
    "**/.turbo": true
  },
  "files.watcherExclude": {
    "**/.venv/**": true,
    "**/.ruff_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/__pycache__/**": true,
    "**/.turbo/**": true
  },

  // python
  "python.defaultInterpreterPath": "./backend/.venv/bin/python",
  // formtting
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      // "source.organizeImports": "explicit" // orders differently, must disable
    }
  },

  // next.js
  "tailwindCSS.experimental.configFile": "frontend/packages/ui/src/styles/globals.css"
}
