{
  // exclude folders
  "files.exclude": {
    "**/.venv": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/__pycache__": true,
    "**/.turbo": true
  },
  "search.exclude": {
    "**/.venv": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/__pycache__": true,
    "**/.turbo": true
  },
  "files.watcherExclude": {
    "**/.venv/**": true,
    "**/.ruff_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/__pycache__/**": true,
    "**/.turbo/**": true
  },

  "editor.formatOnSave": true,

  // python
  "python.defaultInterpreterPath": "./backend/.venv/bin/python",
  // formatting
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      // "source.organizeImports": "explicit" // orders differently, must disable
    }
  },

  // next.js

  // Point to the local TypeScript version
  "typescript.tsdk": "frontend/node_modules/typescript/lib",

  // Enable workspace TypeScript version (not VSCode's built-in)
  "typescript.enablePromptUseWorkspaceTsdk": true,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // cant format above node_modules
  "prettier.configPath": "./frontend/.prettierrc.js",
  "prettier.ignorePath": "./frontend/.prettierignore",

  "tailwindCSS.experimental.configFile": "frontend/packages/ui/src/styles/globals.css",
  "cSpell.words": []

}
